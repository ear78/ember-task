<form>
  <div class="form-group">
    <label >Title</label>
    {{input type="text" value=title class="form-control" placeholder="Add Task..."}}
  </div>
  <div class="form-group">
    <label>Due Date</label>
    {{input type="date" class="form-control" value=date}}
  </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class="form-control" value=description placeholder="Description of Task..."}}
  </div>
  <button {{action 'addTask'}} type="submit" class="btn btn-default">Submit</button>
</form>
{{outlet}}
